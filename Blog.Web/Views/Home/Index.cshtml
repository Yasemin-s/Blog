@model List<Blog.Web.Models.Domain.BlogPost>
@{
    ViewData["Title"] = "Home Page";
}


<div class="container col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-5 py-5">
        <div class="col-12 col-lg-6">
            <h1 class="display-5 fw-bold lh-1 mb-3">
                Blog - Dev Blog
            </h1>
            <p class="lead"> sdjkhfjkbgskjdbfjkdsbf </p>
        </div>

        <div class="col-12 col-lg-6">
            @* img kismi için internetten resmin adresinin kopyalayarak yaptim *@
            <img src="https://images.pexels.com/photos/38568/apple-imac-ipad-workplace-38568.jpeg?auto=compress&cs=tinysrgb&w=600" 
            alt="Blog- Dev Blogssss" 
            class="d-block mx-lg-auto img-fluid"
            width="300"/>
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            @if(Model != null && Model.Any())
            {
                foreach(var blogPost in Model)
                {
                    <div class="mb-5 bg-light box-shadow p-5">
                        <img src="@blogPost.FeaturedImageUrl" alt="@blogPost.Heading"
                        class="mb-2 d-block img-fluid"/>

                        <h2 class="mb-4">@blogPost.Heading</h2>
                        <p class="mb-4">
                            Yazar : @blogPost.Author <br />
                            Yayınlanma Tarihi : @blogPost.PublishedDate.ToShortDateString()
                        </p>

                        <p class="mb-4">
                            @foreach (var tag in blogPost.Tags)
                            {
                                <span class="badge bg-secondary me-1">@tag.Name</span>
                            }
                        </p>


                        <p class="mb-4">@blogPost.ShortDescription</p>
                        <a class="btn btn-dark"
                        asp-area=""
                        asp-controller="Blogs"
                        asp-action="Index"
                        asp-route-urlHandle="@blogPost.UrlHandle">Daha Fazla Oku</a>
                        </div>
                }
            }
        </div>
    </div>
</div>