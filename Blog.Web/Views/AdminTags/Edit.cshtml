@model Blog.Web.Models.ViewModels.EditTagRequest
@{
}
<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1> Etiket Düzenle - Yönetici İşlemleri</h1>
    </div>
</div>

<div class="container py-5">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Id</label>
            <input type="text" id="id" class="form-control" asp-for="Id" readonly/>
        </div>

        <div class="mb-3">
            <label class="form-label">Ad</label>
            <input type="text" id="name" class="form-control" asp-for="Name" />
        </div>

        <div class="mb-3">
            <label class="form-label">Görünür Ad</label>
            <input type="text" id="displayName" class="form-control" asp-for="DisplayName" />
        </div>

        <div class="mb-3">

            <div class="d-flex">
                <button type="submit" class="btn btn-dark">Güncelle</button>
                <button class="btn btn-danger ms-2" type="submit"
                asp-area=""
                asp-controller="AdminTags"
                asp-action="Delete"
                >Sil
                </button>
            </div>

        </div>

    </form>
</div>